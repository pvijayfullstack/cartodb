<div class="Dialog-body u-inner ChangePrivacy-optionsList">
  <% options.each(function(m, index) { %>
    <div class="OptionCard <%= m.classNames() %> js-option" data-index="<%= index %>">
      <div class="IllustrationIcon IllustrationIcon--<%= m.get('illustrationType') %>">
        <i class="iconFont iconFont-<%= m.get('iconFontType') %>"></i>
      </div>
      <div class="OptionCard-title"><%= m.get('title') %></div>
      <div class="OptionCard-desc"><%= m.get('desc') %></div>
    </div>
  <% }); %>
</div>

<% if (showUpgradeBanner) { %>
  <div class="Dialog-body u-inner ChangePrivacy-upgradeBanner">
    <div class="ChangePrivacy-upgradeBannerInner">
      <div class="ChangePrivacy-upgradeInfo">
        To get advantage of all the privacy options you should upgrade your plan
      </div>
      <div class="ChangePrivacy-upgradeAction">
        <% if (showTrial) { %>
          <div class="ChangePrivacy-upgradeActionTrial">
            <i class="iconFont iconFont-Gift ChangePrivacy-upgradeActionTrialIcon"></i>
            15 days free trial
          </div>
        <% } %>
        <a href="<%= upgradeUrl %>" class="Button Button--invert ChangePrivacy-upgradeActionButton">
          <span>Upgrade</span>
        </a>
      </div>
    </div>
  </div>
<% } %>

<% if (showShareBanner) { %>
  <div class="Dialog-body u-inner ChangePrivacy-shareBanner">
    <div class="LayoutIcon ChangePrivacy-shareBannerIcon">
      <i class="iconFont iconFont-People iconFont--super"></i>
    </div>
    <div class="DefaultSecondary">
      Team work is always better. <a href="#" class="js-share">Share this dataset with your colleagues</a>
    </div>
  </div>
  </div>
<% } %>

<div class="Dialog-footer u-inner ChangePrivacy-startFooter">
  <% if (showPasswordInput) { %>
    <input class="js-password-input Input ChangePrivacy-passwordInput" placeholder="Type your password here" value="<%= pwdOption.get('password') %>" type="password" />
  <% } %>
  <button class="Button Button--secondary Dialog-footerBtn cancel">
    <span>cancel</span>
  </button>
  <button class="js-save Button Button--positive <%= saveBtnClassNames %>">
    <span>Save settings</span>
  </button>
</div>
