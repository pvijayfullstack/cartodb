<div class="DatasetsList-item <%= isSelected ? 'is--selected' : '' %>">
  <div class="DatasetsList-itemCategory"></div>
  <div class="DatasetsList-itemPrimaryInfo">
    <h3 class="DatasetsList-itemTitle DefaultTitle">
      <a href="<%= datasetUrl %>" id="title" title="<%= title %>"><%= shortTitle %></a>
      <% if (showPermissionIndicator) { %>
        <span class="DatasetsList-itemTitlePermission PermissionIndicator">READ</span>
      <% } %>
    </h3>
    <% if (description && description.length > 0) { %>
      <p class="DatasetsList-itemDescription DefaultDescription" title="<%= description %>"><%= shortDescription %></p>
    <% } else { %>
      <a href="#" class="DatasetsList-itemDescription CallToAction">Add a description...</a>
    <% } %>
  </div>
  <div class="DatasetsList-itemSecondaryInfo">
    <ul class="DatasetsList-itemMeta">
      <a href="#change-privacy" class="PrivacyIndicator is-<%= privacy %>"><%= privacy %></a>
      <a href="#likes" class="LikesIndicator">
        <i class="iconFont iconFont-Heart--fill LikesIndicator-icon"></i><%= likes %>
      </a>
      <label class="RowsIndicator">
        <i class="iconFont iconFont-Rows RowsIndicator-icon"></i>
        <%= rows %> Rows
      </label>
      <label class="DefaultTimeDiff">
        <i class="iconFont iconFont-Clock DefaultTimeDiff-icon"></i>
          <%= timeDiff %>
          <% if (!isOwner) { %>
            by
            <span class="UserAvatar">
              <img class="UserAvatar--small" />
            </span>
          <% } %>
      </label>
    </ul>
    <div class="DatasetsList-itemTags">
      <% if (tagsCount > 0) { %>
        <div class="DefaultTags">
        <% for (var i = 0, l = Math.min(maxTagsToShow, tags.length); i < l; ++i) { %>
          <a class="DefaultTags-item" href="<%= searchByTagUrl(tags[i]) %>"><%= tags[i] %></a><% if (i !== (l-1)) { %>,<% } %>
        <% } %>
        <% if (tagsCount > maxTagsToShow) { %>
          and <%= tagsCount - maxTagsToShow %> more
        <% } %>
    <% } else { %>
      <a href="#" class="CallToAction">Add tags...</a>
    <% } %>
    </div>
  </div>
</div>
