<div class="MapCard <% if (isOwner) { %> MapCard--selectable <% } %>">
  <div class="MapCard-fake"></div>
  <a href="<%= url %>" class="MapCard-header js-header">
    <div class="MapCard-loader"></div>
    <div class="MapCard-headerGraph js-header-graph"></div>
  </a>
  <div class="MapCard-content">
    <div class="MapCard-contentBody">
      <div class="MapCard-contentBodyRow MapCard-contentBodyRow--flex">
        <h3 class="MapCard-title DefaultTitle u-ellipsLongText">
          <a class="DefaultTitle-link" title="<%= name %>" href="<%= url %>"><%= name %></a>
        </h3>
        <% if (showPermissionIndicator) { %>
          <span class="PermissionIndicator MapCard-itemTitlePermission">READ</span>
        <% } %>
      </div>

      <div class="MapCard-contentBodyRow MapCard-contentBodyRow--flex">
        <% if (desc.safeHTML) { %>
          <div class="MapCard-desc DefaultDescription" title="<%- desc.clean %>"><%= desc.safeHTML %></div>
        <% } else { %>
          <span class="NoResults">No description</span>
        <% } %>
      </div>

      <div class="MapCard-contentBodyRow">
        <% if (tags_count > 0) { %>
          <div class="MapCard-tags DefaultTags">
            <% for (var i = 0, l = Math.min(3,tags.length); i<l; i++) { %>
              <a class="DefaultTags-item js-tag-link" href="<%= router.currentUrl({ search: ':'+ tags[i], page: 1 }) %>"><%= tags[i] %></a><% if (i != (l-1)) { %>,<% } %>
            <% } %>
            <% if (tags_count > 3) { %>
              and <%= tags_count - 3%> more
            <% } %>
          </div>
        <% } else { %>
          <span class="NoResults">No tags</span>
        <% } %>
      </div>
    </div>
    <div class="MapCard-contentFooter">
      <div class="MapCard-contentFooterDetails--left">
        <button class="PrivacyIndicator is-<%= privacy %> js-privacy"><%= privacy %></button>
        <div class="MapCard-contentFooterTimeDiff DefaultTimeDiff">
          <i class="iconFont iconFont-Clock DefaultTimeDiff-icon"></i>
          <%= timeDiff %>
          <% if (!isOwner) { %>
            by
            <span class="UserAvatar" data-title="<%= owner.name || owner.usernameÂ  %>">
              <img class="UserAvatar-img UserAvatar-img--smaller" src="<%= owner.avatar_url %>" />
            </span>
          <% } %>
        </div>
      </div>
      <div class="MapCard-contentFooterDetails--right">
        <span class="js-likes-indicator" />
      </div>
    </div>
  </div>
</div>
