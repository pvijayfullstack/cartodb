<div class="DashboardFilters-row">
  <div class="DashboardFilters-type">
    <ul class="DashboardFilters-list">
      <li class="DashboardFilters-typeItem">
        <form class="DashboardFilters-search" action="<%= prefix %>/dashboard<%= model === 'maps' ? '/maps/' : '/datasets/' %><%= !exclude_shared ? 'shared/' : '' %><%= locked ? 'locked/' : '' %><%= liked ? 'liked/' : '' %>search">
          <input class="DashboardFilters-searchButton" type="submit" value="" />
          <input class="DashboardFilters-searchValue" type="text" value="<%= ( tag && (':' + tag) ) || q %>" placeholder="Search..." />
        </form>
      </li>
      <li class="DashboardFilters-typeItem">
        <a href="<%= prefix %>/dashboard<%= model !== 'datasets' ? '/maps/' : '/datasets/' %>" class="DashboardFilters-typeLink <%= exclude_shared && !liked ? 'is-selected' : '' %>">
          <%= model === "maps" ? 'Maps' : 'Datasets' %>
        </a>
      </li>
      <% if (org) { %>
        <li class="DashboardFilters-typeItem">
          <a class="DashboardFilters-typeLink <%= !exclude_shared && !liked ? 'is-selected' : '' %>" href="<%= prefix %>/dashboard<%= model !== 'datasets' ? '/maps/' : '/datasets/' %>shared">Shared with you</a>
        </li>
      <% } %>
      <li class="DashboardFilters-typeItem">
        <a class="DashboardFilters-typeLink <%= exclude_shared && liked ? 'is-selected' : '' %>" href="<%= prefix %>/dashboard<%= model !== 'datasets' ? '/maps/' : '/datasets/' %>liked">
          Liked <%= model === "maps" ? 'Maps' : 'Datasets' %>
        </a>
      </li>
    </ul>
  </div>

  <div class="DashboardFilters-order">
    <ul class="DashboardFilters-list">
      <li class="DashboardFilters-orderItem">
        Order by
      </li>
      <li class="DashboardFilters-orderItem">
        <a data-title="Recently modified" class="DashboardFilters-orderLink DashboardFilters-orderLink--clock js-updated_at <%= !order || order === 'updated_at' ? 'is-selected' : '' %>" href="#time"></a>
      </li>
      <li class="DashboardFilters-orderItem">
        <a data-title="Most visited" class="DashboardFilters-orderLink DashboardFilters-orderLink--graph js-mapviews <%= order === 'mapviews' ? 'is-selected' : '' %>" href="#views"></a>
      </li>
      <li class="DashboardFilters-orderItem">
        <a data-title="Most liked" class="DashboardFilters-orderLink DashboardFilters-orderLink--heart js-likes <%= order === 'likes' ? 'is-selected' : '' %>" href="#likes"></a>
      </li>
    </ul>

    <a href="#new-map" class="Button Button--green">
      <span><%= model === "maps" ? 'New Map' : 'Create connection' %></span>
    </a>
  </div>
</div>

<div class="DashboardFilters-row">
  <label class="DashboardFilters-selectedItems"><%= selected_items %> <%= model === "datasets" ? 'dataset' : 'map' %><%= selected_items !== 1 ? 's' : ''%> selected</label>

  <div class="DashboardFilters-actions">
    <ul class="DashboardFilters-actionsList">
      <% if (model === "datasets") { %>
        <li class="DashboardFilters-actionsItem">
          <a class="DashboardFilters-actionsLink js-create" href="#/create-map">Create Map...</a>
        </li>
      <% } %>
      <% if (selected_items === 1) { %>
        <li class="DashboardFilters-actionsItem">
          <a class="DashboardFilters-actionsLink js-privacy" href="#/change-privacy">Change privacy</a>
        </li>
      <% } %>
      <li class="DashboardFilters-actionsItem">
        <a class="DashboardFilters-actionsLink js-lock" href="#/lock">Lock <%= model === "datasets" ? 'dataset' : 'map' %><%= selected_items !== 1 ? 's' : ''%>...</a>
      </li>
      <li class="DashboardFilters-actionsItem">
        <a class="DashboardFilters-actionsLink is--critical js-delete" href="#/delete">Delete <%= model === "datasets" ? 'dataset' : 'map' %><%= selected_items !== 1 ? 's' : ''%>...</a>
      </li>
    </ul>
  </div>
</div>