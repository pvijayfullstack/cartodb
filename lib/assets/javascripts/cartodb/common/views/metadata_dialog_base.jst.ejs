<div class="mamufas">
  <section class="block modal <%= modal_type %>">
    <a href="#close" class="close">x</a>
    <div class="head">
      <h3><%= title %></h3>
      <% if (description) { %>
      <p class="margin5"><%= description %></p>
      <% } %>
    </div>
    <div class="content">
      <div>

        <div class="margin15">
          <label class="uppercase smaller strong lighter">Name</label>
          <input type="text" placeholder="Table name" value="<%= vis_name %>" name="name" />
        </div>

        <div class="margin15">
          <label class="uppercase smaller strong lighter margin15">Description</label>
          <textarea maxlength="<%= maxLength %>" name="description" cols="30" rows="10"><%= vis_description %></textarea>
          <div class="hint"><strong>**bold**</strong> <em>*italics*</em> [link title](url)</div>
        </div>

        <div class="margin15">
          <label class="uppercase smaller strong lighter">Tags</label>
          <ul></ul>
        </div>

        <div class="margin15">
          <label class="uppercase smaller strong lighter">Source</label>
          <input type="text" placeholder="Source of the data" value="<%= vis_source %>" name="source" />
        </div>

      </div>
    </div>
    <div class="foot">
      <a href="#save" class="right ok <%= ok_button_classes %>"><%= ok_title %></a>
    </div>
  </div>
</div>
