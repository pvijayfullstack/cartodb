<div class="Form-row js-avatarSelector">
  <div class="Form-rowLabel">
    <label class="Form-label">Avatar</label>
  </div>
  <div class="Form-rowData Form-avatar">
    <div class="Form-avatarPreview">
      <img src="<%= avatarURL %>" title="<%- username %>" alt="<%- username %>" class="Form-avatarPreviewImage" />
      <% if (state === "loading") { %>
        <div class="Form-avatarPreviewLoader">
          <div class="Spinner Form-avatarPreviewSpinner"></div>
        </div>
      <% } %>
    </div>
    <input class="js-fileAvatar" type="file" value="Change avatar" accept="<%= 'image/*' %>" />
    <input class="js-inputAvatar" id="user_avatar_url" name="user[avatar_url]" type="hidden" value="<%- avatarURL %>" />
  </div>
  <div class="Form-rowInfo">
    <% if (state === "error") { %>
      <p class="Form-rowInfoText Form-rowInfoText--error Form-rowInfoText--multipleLines">There was an error uploading your avatar. Check the height and size (max 1MB) of the image</p>
    <% } else { %>
      <p class="Form-rowInfoText">Recommended images should be 128x128 of size</p>
    <% } %>
  </div>
</div>
