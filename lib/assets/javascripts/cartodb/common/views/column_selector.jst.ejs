<% if (name == "the_geom" && joinType == "regular") { %>
<a href="#<%= name %>" title="<%= name %>" class="radiobutton <%= columnType %> small disabled"><span class="radio"></span><%= name %></a>
<% } else if (name == "the_geom" && joinType == "spatial") { %>

<% if (source == 'destiny') { %>
<a href="#<%= name %>" title="<%= name %>" class="radiobutton <%= columnType %> small selected"><span class="radio"></span><%= name %></a>
<% } else { %>
<a href="#<%= name %>" title="<%= name %>" class="small <%= columnType %>"><%= name %></a>
<% } %>

<% } else if (name != "the_geom" && joinType != "regular") { %>

<% if (source == 'origin') { %>
<a href="#<%= name %>" title="<%= name %>" class="small <%= columnType %>"><%= name %></a>
<% } else { %>
<a href="#<%= name %>" title="<%= name %>" class="radiobutton <%= columnType %> <% if (showRadio == false) { %>hidden_radio<% }  %> small"><span class="radio"></span><%= name %></a>
<% } %>


<% } else { %>
<a href="#<%= name %>" title="<%= name %>" class="radiobutton <%= columnType %> small"><span class="radio"></span><%= name %></a>
<% } %>

<% if (joinType != "spatial" || (joinType == 'spatial' && source == 'origin')) { %>
<a href="#switch" class="right switch <%= switchSelected ? "enabled" : "disabled" %>"><span class="handle"></span></a>
<% } %>

