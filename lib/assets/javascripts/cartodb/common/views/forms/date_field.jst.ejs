<% if (label) { %>
  <label><%= attribute %></label>
<% } %>
<div class="date_field">
  <div class="column day_field">
    <label>DAY</label>
    <div class="form_spinner day"></div>
  </div>
  <div class="column month_field">
    <label>MONTH</label>
    <div class="form_combo month"></div>
  </div>
  <div class="column year_field">
    <label>YEAR</label>
    <div class="form_spinner year"></div>
  </div>
  <div class="column time_field">
    <label>TIME</label>
    <input type="text" class="time"/>
  </div>
</div>