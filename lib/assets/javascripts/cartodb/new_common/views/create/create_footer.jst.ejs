<% if (option !== 'templates') { %>
  <div class="CreateDialog-footerInner <% if (option === 'preview' || (option === "listing" ||Â importOption !== "scratch") ) { %> is-expanded <% } %>">
    <% if (option === 'listing') { %>

      <% if (importOption === 'scratch') { %>
        <% if (type === "map") { %>
          <div class="CreateDialog-footerInfo">
            <i class="iconFont iconFont-Info CreateDialog-footerInfoIcon"></i>New on CartoDB? Start with one of <a href="#/templates" class="js-templates">our templates</a>.
          </div>
        <% } %>
      <% } else { %>
        <% if (enabledUpload) { %>
          <div class="CreateDialog-footerInfo">
            <div class="Checkbox <%= isUploadValid ? '' : 'is-disabled' %>">
              <button  class="Checkbox-input <%= contentGuessing ? 'is-checked' : '' %> js-guessing"></button>
              <label class="Checkbox-label">Let CartoDB automatically guessing types on import.</label>
            </div>
          </div>
          <div class="CreateDialog-footerActions">
            <button class="Button Button--positive CreateDialog-footerActionsButton <%= isUploadValid ? '' : 'is-disabled' %> js-connect">connect dataset</button>
          </div>
        <% } %>
      <% } %>
    <% } %>

    <% if (option === 'preview') { %>
      <div class="CreateDialog-footerInfo">
        <i class="iconFont iconFont-Info CreateDialog-footerInfoIcon"></i>Take your time to watch this tutorial or skip it and go to your map now
      </div>
      <div class="CreateDialog-footerActions">
        <a href="<%= mapTemplate && mapTemplate.map && mapTemplate.map.url %>" class="Button Button--light CreateDialog-footerActionsButton is-separated">CREATE THIS MAP</a>
        <button class="Button Button--positive CreateDialog-footerActionsButton js-start">go for it</button>
      </div>
    <% } %>
  </div>
<% } %>