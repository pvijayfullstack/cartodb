<span class="Filters-separator"></span>

<div class="Filters-row">
  <div class="Filters-group <% if (q) { %>is-searching<% } %>">
    <div class="Filters-typeItem Filters-searchEnabler">
      <a href="#/search" class="Filters-searchLink js-search-link Filters-searchLink--short">
        <i class="Filters-searchLinkIcon iconFont iconFont-Lens"></i><span>Search</span>
      </a>
    </div>

    <div class="Filters-typeItem Filters-typeItem--searchField js-search-field">
      <form class="Filters-searchForm js-search-form" action="#">
        <input class="Filters-searchInput js-search-input" type="text" value="<%- q %>" placeholder="by name" />
        <% if (q) { %>
          <a href="#/close" class="Filters-cleanSearch Filters-cleanSearch--short js-clean-search">
            <i class="iconFont iconFont-Close"></i>
          </a>
        <% } %>
      </form>
    </div>
  </div>

  <ul class="Filters-group">
    <ul>
      <li class="Filters-typeItem Filters-typeItem <% if (q) { %>is-searching<% } %>"><button class="Filters-typeLink Filters-typeLink--grey Filters-typeLink--category Filters-dropdown js-categoriesDropdown"><span class="categoriesDropdown-label js-categoriesDropdown-label" title="<%- tag %>"><%- tag == '' ? 'Category' : tag %></span> <i class="Filters-darrow iconFont iconFont-ArrowMenu"></i></button></li>
    </ul>
  </div>
</div>
