<div class="cartodb-popup header with-image" data-cover="true">
  <a href="#close" class="cartodb-popup-close-button close">x</a>
  <div class="cartodb-popup-header">
    <div class="cover">
      <div id="spinner"></div>
      <div class="image_not_found"> <i></i> <a href="#/map" class="help">Non-valid picture URL</a></div>
      {{#content.fields}}
      {{^position}}
      <h1>{{=<% %>=}}{{<%={{ }}=%>{{{ name }}}{{=<% %>=}}}}<%={{ }}=%></h1>
      {{/position}}
      {{/content.fields}}
      <div class="shadow"></div>
    </div>
  </div>
  <div class="cartodb-popup-content-wrapper">
    <div class="cartodb-popup-content">
      {{#content.fields}}
      {{#position}}
      {{#title}}
      {{#alternative_name}}
      <h4>{{alternative_name}}</h4>
      {{/alternative_name}}
      {{^alternative_name}}
      <h4>{{name}}</h4>
      {{/alternative_name}}
      <p>{{=<% %>=}}{{<%={{ }}=%>{{{ name }}}{{=<% %>=}}}}<%={{ }}=%></p>
      {{/title}}
      {{^title}}
      <p>{{=<% %>=}}{{<%={{ }}=%>{{{ name }}}{{=<% %>=}}}}<%={{ }}=%></p>
      {{/title}}
      {{/position}}
      {{/content.fields}}
    </div>
  </div>
  <div class="cartodb-popup-tip-container"></div>
</div>