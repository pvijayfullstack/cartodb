<div class="info">

  <div class="user-info">

    <div class="avatar">
      <a href="<%= public_visualizations_home_url(user_domain: params[:user_domain]) %>" class="circle">
      <img src="<%= @organization.avatar_url.present? ? @organization.avatar_url : 'http://cartodb.s3.amazonaws.com/static/public_dashboard_default_organization_avatar.png' %>"
        width="128" height="128" />
      </a>
    </div>

    <div class="details">
      <%= content_tag :h2, ( @organization.display_name.present? ? @organization.name : @organization.display_name ) %>

      <%= link_to "@#{@organization.twitter_username}", "http://twitter.com/#{@organization.twitter_username}", :class => :twitter if @organization.twitter_username.present? %>

      <%= content_tag :p, @organization.description if @organization.description.present? %>

      <% if @organization.website.present? %>

        <% if @organization.description.present? || @organization.twitter_username.present?  %>
        <div class="separator"></div>
        <% end %>

        <div class="website"><%= link_to @organization.website.gsub(/https?:\/\//, ""), @organization.website if @organization.website.present? %></div>
      <% end %>
    </div>

    <ul>
      <% if action_name == 'datasets' %>
        <li><h2 class="count" title="<%= @organization.display_name.present? ? @organization.name : @organization.display_name %> dataset<%= @public_org_tables_count == 1 ? '' : 's' %>"><strong><%= @public_org_tables_count %></strong>dataset<%= @public_org_tables_count == 1 ? '' : 's' %></h2></li>
        <li><h2><a href="<%= public_visualizations_home_url(user_domain: params[:user_domain]) %>" class="count" title="<%= @organization.display_name.present? ? @organization.name : @organization.display_name %> visualization<%= @public_org_tables_count == 1 ? '' : 's' %>"><strong><%= @public_org_vis_count %></strong>visualization<%= @public_org_vis_count == 1 ? '' : 's' %></a></h2></li>
      <% else %>
        <li><h2><a href="<%= public_datasets_home_url(user_domain: params[:user_domain]) %>" class="count" title="<%= @organization.display_name.present? ? @organization.name : @organization.display_name %> dataset<%= @public_org_tables_count == 1 ? '' : 's' %>"><strong><%= @public_org_tables_count %></strong>dataset<%= @public_org_tables_count == 1 ? '' : 's' %></a></h2></li>
        <li><h2 class="count" title="<%= @organization.display_name.present? ? @organization.name : @organization.display_name %> dataset<%= @public_org_tables_count == 1 ? '' : 's' %>"><strong><%= @public_org_vis_count %></strong>visualization<%= @public_org_vis_count == 1 ? '' : 's' %></h2></li>
      <% end %>
    </ul>

  </div>
