<%= content_for(:title) do %>CartoDB &middot; <%= @name %> public feed<% end %>
<div class="PublicBody-content PublicBody--grey">
  <div class="PublicUserProfile">
    <div class="PublicUserProfile-profile">

      <div class="PublicUserProfile-bio">
        <h2 class="PublicUserProfile-name u-ellipsLongText"><%= @name %></h2>

        <% unless @viewed_user.description.nil? %>
          <p class="PublicUserProfile-description"><%= @viewed_user.description %></p>
        <% end %>

      </div>
      <ul class="PublicUserProfile-details">
        <% unless @viewed_user.twitter_username.blank? %>
          <li class="PublicUserProfile-detail"><i class="iconFont iconFont-Twitter iconFont--with-label"></i> <a href="http://twitter.com/<%= @viewed_user.twitter_username %>"><%= @viewed_user.twitter_username %></a></li>
        <% end %>

        <% unless @viewed_user.website.blank? %>
          <li class="PublicUserProfile-detail"><i class="iconFont iconFont-Anchor iconFont--with-label"></i> <a href="<%= @viewed_user.website %>"><%= @viewed_user.website %></a></li>
        <% end %>

        <% if @viewed_user.has_organization? %>
          <li class="PublicUserProfile-detail"><i class="iconFont iconFont-Attache iconFont--with-label"></i> <%= @viewed_user.organization.name %></li>
      <% end %>

        <% if @viewed_user.available_for_hire %>
        <li class="PublicUserProfile-detail"><i class="iconFont iconFont-Email iconFont--with-label"></i> <a href="mailto:<%= @viewed_user.email %>"><%= @viewed_user.email %></a></li>
        <% end %>

        <% unless @viewed_user.location.blank? %>
        <li class="PublicUserProfile-detail"><i class="iconFont iconFont-Pin iconFont--with-label"></i> <%= @viewed_user.location %></li>
        <% end %>

        <li class="PublicUserProfile-detail"><i class="iconFont iconFont-Calendar iconFont--with-label"></i> Member since <%= @viewed_user.created_at.strftime("%B %Y") %></li>
      </ul>
    </div>

    <div class="Feed js-feed"></div>
  </div>
</div>

