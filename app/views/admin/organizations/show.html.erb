<% content_for(:page_title) do %>
  Your organization |
<% end %>
<%= content_for(:js) do %>
  <%= javascript_include_tag :cdb, :application, :organization %>
  <script type="text/javascript">
    var username = "<%= current_user.username %>"
      , type = "oauth"
      , config = <%=raw frontend_config.html_safe %>
      , organization_quota = {
          seats: <%= current_user.organization.seats %>,
          quota_in_bytes: <%= current_user.organization.quota_in_bytes %>
        }
      , organization_users = <%= raw @users.map { |u| {
          id: u.id,
          username: u.username, 
          quota_in_bytes: u.quota_in_bytes, 
          remaining_quota: u.remaining_quota,
          organization_owner: u.organization_owner
        }}.to_json -%>
      , current_username = "";
  </script>
<% end %>
<%= content_for(:css) do %>
  <%= stylesheet_link_tag :common, :organization, :media => 'all' %>
<% end %>


<article>
  <div class="inner">
    <section class="left block long">
      <div class="head">
        <h2>Everyone in your account</h2>
      </div>
      <ul><%= render :partial => 'shared/flash_message' %></ul>
      <div class="list-head">
        <label>username</label>
      </div>
      <div class="content users_list">
        <ul>
          <% @users.each do |user| -%>
          <li>
            <div class="info">
              <%= link_to user.username, edit_organization_user_path(user.username) %>
              <% if user.organization_owner %>
                <span class="status owner">OWNER</span>
              <% end %>
            </div>
            <div class="storage">
              <div class="progress-bar"></div>
            </div>
          </li>
          <% end -%>
        </ul>
      </div>
      <div class="foot">
        <%= link_to "Add new user", new_organization_user_path, :class => 'right button grey' %>
      </div>
    </section>
    <aside class="right organization_quota">
      <%= render partial: 'aside' %>
    </aside>
  </div>
</article>
