<div class="Header" id="header">
  <div class="u-inner Header-inner">
    <div class="Header-navigation">
      <ul class="Header-navigationList">
        <li class="js-logo">
          <a href="<%= home_url %>">
            <span class="Logo Logo--avatar">
              <i class="iconFont iconFont-CartoFante"></i>
            </span>
            <% if public %>
              <span class="Logo Logo--text Header-logoText">
                <i class="iconFont iconFont-CartoDB"></i>
              </span>
            <% end %>
          </a>
        </li>
        <% unless public %>
          <li>
            <ul class="Header-navigationBreadcrumb">
              <li class="Header-navigationBreadcrumbItem">
                <% if current_user.has_organization? %>
                  <%= current_user.organization.name %> /
                <% end %>
              </li>
              <li class="Header-navigationBreadcrumbItem"><%= current_user.name.present? ? current_user.name : current_user.username %> /</li>
              <li class="Header-navigationBreadcrumbItem" id="header-breadcrumbs-dropdown"></li>
            </ul>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="Header-settings">
      <ul class="Header-settingsList">
        <li class="Header-settingsItem">
          <a href="http://cartodb.com/gallery/" class="Header-settingsLink">Explore</a>
        </li>
        <% if current_user.present? %>
          <li class="Header-settingsItem">
            <a href="http://docs.cartodb.com/" class="Header-settingsLink">Learn</a>
          </li>
          <% unless public %>
            <li class="Header-settingsItem Header-settingsItemNotifications js-user-notifications">
              <a href="#/notifications" class="UserNotifications">
                <i class="UserNotifications-Icon iconFont iconFont-Alert"></i>
              </a>
            </li>
            <li class="Header-settingsItem">
              <a href="#/options" class="UserAvatar" id="header-settings-dropdown">
                <%= image_tag current_user.avatar_url, :class => 'UserAvatar-img UserAvatar-img--medium' %>
              </a>
            </li>
          <% end %>
        <% else %>
          <li class="Header-settingsItem">
            <a href="http://cartodb.com/login" class="Header-settingsLink">Login</a>
          </li>
          <li class="Header-settingsItem">
            <a href="http://cartodb.com/signup" class="Button Button--positive">
              <span>Sign up</span>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
