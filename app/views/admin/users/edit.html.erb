<%= content_for(:js) do %>
  <%= headjs_include_tag "plugins/jquery.min", "admin/users/edit"  %>
<% end %>
<%= content_for(:head) do %>
  <%= stylesheet_link_tag('reset.css','admin/layout','admin/users/edit') %>
<% end %>

<%= render 'admin/shared/subheader' %>

<section id="content">
  <div class="inner_content">

    <% [:success, :error].each do |key| %>
      <% if flash[key] %>
        <div class="flash <%= key %>"><%= flash[key] %></div>
      <% end %>
    <% end %>

    <div class="tables_list">
      <div class="left">
        <div class="top_blue_medium">
          <h3>Your <strong>account settings</strong></h3>
        </div>
        <div class="middle_white_medium">
          <p>This is your login data. You'll need it to use CartoDB.</p>
          <%= form_for current_user do |f| %>
            <span class="form_block">
              <%= f.label :email, 'YOUR EMAIL' %>
              <%= f.text_field :email, :disabled => true %>
            </span>
            <span class="form_block">
              <%= f.label :password, 'YOUR PASSWORD' %>
              <%= f.password_field :password, :disabled => true, :class => current_user.errors.on(:password) ? 'error' : nil %>
              <% if current_user.errors.full_messages.any? %>
                <div class="error_content">
                  <p><span>Your passwords have to be the same</span></p>
                </div>
              <% end %>
            </span>
            <span class="form_block last">
              <%= f.label :password_confirmation, 'CONFIRM PASSWORD' %>
              <%= f.password_field :password_confirmation, :disabled => true, :class => current_user.errors.on(:password) ? 'error' : nil %>
            </span>
            <span class="submit_block">
              <button type="submit" class="submit">
                <span>Save changes</span>
              </button>
              <p>To edit this data you need to <a class="open_unlock" href="#unlock_account">verify your identity</a></p>
            </span>
          <% end %>
          <div class="delete">
            <a href="#delete_account" class="delete_account disabled"><span>Delete your account</span></a>
            <p><strong> All</strong> your user information and tables will be erased</p>
          </div>
        </div>
        <div class="bottom_white_medium"></div>
      </div>
      <div class="right">
        <%= render :partial => 'contextual_links' %>
      </div>
    </div>
  </div>
</section>

<div class="mamufas">
  <div class="unlock_window">
    <a href="#close_unlock" class="close_unlock">Close</a>
    <div class="inner_">
      <%= form_tag unlock_path, :method => :post do %>
      <form action="#">
        <span class="top">
          <%= label_tag 'unlock_password', 'Insert your current password' %>
          <%= password_field_tag 'unlock_password' %>
          <a class="forget">did you forget it?</a>
        </span>
        <span class="bottom">
          <a class="cancel">cancel</a>
          <%= submit_tag 'Unlock' %>
        </span>
      </form>
      <% end %>
    </div>
  </div>

  <div class="delete_window">
    <a href="#close_window" class="close_delete"></a>
    <div class="inner_">
      <span class="top">
        <h3>You are about to delete your account</h3>
        <p>You will not be able to recover your tables and their data.</p>
      </span>
      <span class="bottom">
        <a href="#close_window" class="cancel">cancel</a>
        <%= button_to 'Yes, I want to delete my account', user_path(@user), :method => :delete, :class => 'confirm_delete' %>
      </span>
    </div>
  </div>

</div>
