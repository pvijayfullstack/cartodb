<% content_for(:page_title) do %>
  Your profile |
<% end %>
<%= content_for(:js) do %>
  
<% end %>
<%= content_for(:css) do %>
  <%= render 'shared/lato_font' %>
  <%= stylesheet_link_tag 'cartodb.css', 'new_common.css',  :media => 'all' %>
<% end %>


<%= render 'admin/shared/new_private_header' %>

<div>
  <%= render :partial => 'admin/shared/new_pages_subheader' %>

  <div class="CredentialsContent">
    <div class="u-inner">
      <%= form_for current_user, url: profile_update_user_path(user_domain: params[:user_domain]) do |f| %>
        <%= csrf_meta_tags %>

        <%= f.label :name, 'Your display name' %>
        <%= f.text_field :name, :class => current_user.errors[:name].present? ? 'error' : nil %>
        <%= form_error_for :name, current_user.errors %>

        <%= f.submit 'Save changes', :class => "right grey button new" %>
      <% end %>
    </div>
  </div>

</div>

<% if !Cartodb.config[:cartodb_com_hosted].present? %>
  <div class="SupportBanner" id="support-banner"></div>
<% end %>

<%= render 'admin/shared/new_footer' %>
