  <% content_for(:js) do %>
    <%= headjs_include_tag "plugins/jquery.min", "plugins/general_functions", "admin/api/api" %>
  <% end %>
  <% content_for(:head) do %>
    <%= stylesheet_link_tag('reset', 'admin/layout','admin/others/tokens') %>
  <% end %>

  <%= render :partial => 'admin/shared/subheader' %>

  <section id="content">
    <div class="inner_content">

      <%= render :partial => 'shared/flash_message' %>

      <div class="tables_list">
        <div class="left">
          <div class="top_blue_medium">
            <h3>Your <strong>api keys</strong></h3>
            <p><a class="oauth selected" href="<%= oauth_credentials_path %>">OAuth</a><a class="jsonp" href="<%= jsonp_credentials_path %>">JSONP</a></p>
          </div>
          <div class="middle_white_medium">
            <div class="end_oauth">
              <p>Using the key and secret you can access CartoDB from external applications.</p>
              <span class="form_block">
                <label>YOUR KEY</label>
                <input type="text" value="<%= current_user.client_application.key %>" readonly="readonly"/>
              </span>
              <span class="form_block last">
                <label>YOUR SECRET</label>
                <input type="text" value="<%= current_user.client_application.secret %>" readonly="readonly"/>
                <p></p>
              </span>
              <span class="end_key">
                <a href="#open_confirm_renew" class="open_confirm_renew submit orange">Get new key and secret</a>
              </span>
            </div>
          </div>
          <div class="bottom_white_medium"></div>
        </div>
        <div class="right">
          <%= render :partial => 'create_first' %>
        </div>
      </div>
    </div>
  </section>


  <% content_for(:mamufas) do %>
    <div class="mamufas">
      <div class="renew_window">
        <a href="#close_window" class="close_delete"></a>
        <div class="inner_">
          <span class="top">
            <h3>You are about to refresh your api key and secret</h3>
            <p>Doing that you will have to change all your api keys in these applications where you are using CartoDB, think about it!</p>
          </span>
          <span class="bottom">
            <a href="#close_window" class="cancel">cancel</a>
            <a href="#confirm_renew" class="confirm_renew" key="">Renew your keys</a>
          </span>
        </div>
      </div>
    </div>
  <% end %>


