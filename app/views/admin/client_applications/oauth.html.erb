  <% content_for(:js) do %>
    <%= headjs_include_tag "plugins/jquery.min", "plugins/tumblr", "admin/api/api" %>
  <% end %>
  <% content_for(:head) do %>
    <%= stylesheet_link_tag('reset','admin/layout','admin/others/tokens') %>
  <% end %>

  <%= render :partial => 'admin/tables/subheader' %>

  <section id="content">
    <div class="inner_content">
      <div class="tables_list">
        <div class="left">
          <div class="top_blue_medium">
            <h3>Your <strong>apps</strong></h3>
            <p><a class="oauth selected" href="<%= oauth_credentials_path %>">OAuth</a><a class="jsonp" href="<%= jsonp_credentials_path %>">JSONP</a></p>
          </div>
          <div class="middle_white_medium">
            <div class="end_oauth">
              <p>Using the key and the secret you can use CartoDB from external applications developed by you.</p>
              <span class="form_block">
                <label>YOUR KEY</label>
                <input type="text" value="<%= current_user.client_application.key %>" readonly="readonly"/>
              </span>
              <span class="form_block last">
                <label>YOUR SECRET</label>
                <input type="text" value="<%= current_user.client_application.secret %>" readonly="readonly"/>
                <p></p>
              </span>
              <span class="end_key">
                <a href="<%= oauth_credentials_path %>" class="submit orange"><span>Get new key and secret</span></a>
                <p>(Be sure you assume <a href="#">the risks of that</a>)</p>
              </span>
            </div>
          </div>
          <div class="bottom_white_medium"></div>
        </div>
        <div class="right">
          <%= render :partial => 'create_first' %>
        </div>
      </div>
    </div>
  </section>