  <%= content_for(:js) do %>
    <%= headjs_include_tag "plugins/jquery.min", "plugins/general_functions", "plugins/tumblr", "plugins/file_uploader", "admin/tables/dashboard", "plugins/jquery.color", "admin/tables/import"  %>
  <% end %>
  <%= content_for(:head) do %>
    <%= stylesheet_link_tag('reset.css','admin/layout','admin/tables/dashboard') %>
  <% end %>

  <%= render 'subheader' %>

  <section id="content">
    <div class="inner_content">
      <div class="requests_info">
        <div class="top_white"></div>
        <div class="middle_white">
          <a class="close" href="#close_stats">close</a>
          <h2>Welcome back <%= current_user.username %></h2>
          <p>You have done <strong>1,253 requests</strong> in the last 22 days</p>
          <img src="https://chart.googleapis.com/chart?chxr=0,6.667,100&chxs=0,676767,0,0,_,676767|1,676767,0,0,_,676767&chxt=x,y&chbh=37,1,1&chs=849x60&cht=bvg&chco=D7E6E8|D7E6E8|D7E6E8|D7E6E8|D7E6E8|D7E6E8|D7E6E8|BFD6D9|BFD6D9|BFD6D9|BFD6D9|BFD6D9|BFD6D9|BFD6D9|9CC0C4|9CC0C4|9CC0C4|9CC0C4|9CC0C4|9CC0C4|9CC0C4|9CC0C4&chd=s1:ibYXZabeaaaglfiiklqpmn,fl9YMYS&chp=0.033" width="849" height="60" alt="Requests stats" />
        </div>
        <div class="bottom_white"></div>
      </div>

      <div class="tables_list">
        <div class="left">
          <div class="top_blue_medium">
            <h3><strong><%= pluralize(current_user.tables_count, 'table', 'tables') %></strong> in your account</h3>
            <a class="new_table" href="#create_table">Create a new table</a>
          </div>
          <div class="middle_white_medium">
            <% if @tables.current_page_record_count == 0 %>
              <div class="no_tables">
                <h5>Hey! You don't have any tables</h5>
                <p>Why do you not start <a href="#create_table" class="new_table">creating a new table</a>?</p>
              </div>
            <% else %>
              <ul class="your_tables">
                <% @tables.each_with_index do |table, i| %>
                <li<%= ' class="last"'.html_safe if i == @tables.current_page_record_count - 1%>>
                  <div class="meta_info">
                    <span class="info">
                      <h4><%= link_to(table.name, table, :class=>'tableTitle')  %> </h4>
                      <p class="status <%= table_privacy_text(table).downcase %>"><%= table_privacy_text(table) %></p>
                      <p class="delete"> | <a table-name="<%= table.name %>" href="#" class="delete">delete table</a></p>
                      <p class="columns"><strong><%= pluralize(table.rows_counted,'row','rows') %> / <%= table.schema.size %> columns:</strong>
                      <%= table.schema.map{ |e| e.first }[1...4].join(', ') %>...</p>
                    </span>
                    <span class="tags">
                      <% unless table.updated_at.blank? %>
                      <p class="last_op"><%= time_ago_in_words(table.updated_at) %> ago</p>
                      <% end %>
                      <% unless table.tags.blank? %>
                        <% table.tags.split(',').each do |tag_name| %>
                        <a href="#"><%= tag_name %></a>
                        <% end %>
                      <% end %>
                    </span>
                  </div>
                </li>
                <% end %>
              </ul>
            <% end %>
          </div>
          <div class="bottom_white_medium"></div>
          <%= paginate(@tables) %>
        </div>
        <div class="right">
          <h4>BROWSE BY TAGS</h4>
          <% if @tags.empty? %>
            <span class="no_tags">
              <p>You have not added any tags yet.</p>
              <p>Tags are useful for organizing and filtering your tables.</p>
              <p>For adding tags to a table, open it and define it with the button under the name.</p>
            </span>
          <% else %>
            <ul>
              <% @tags.each do |tag| %>
                <li><a href="#"><span style="background-position:<%= tag_width(tag[:count], @tags.last[:count], @tags.first[:count]) %>px 0"><%= tag[:name] %></span></a></li>
              <% end %>
            </ul>
          <% end %>
        </div>
      </div>
    </div>
  </section>


  <%= content_for(:mamufas) do %>
    <div class="mamufas">

      <div class="create_window">
        <a href="#close_window" class="close_create"></a>
        <div class="inner_">
          <span class="loading">
            <h5>We are creating your table...</h5>
            <p>It's not gonna be a lot of time. Just a few seconds, ok?</p>
          </span>
          <form action="#import_file" id="import_file" enctype="multipart/form-data" method="post">
            <span class="top">
              <h4>Do you want to import some data to the new table?</h4>
              <p>You will also be available to do it later.</p>
              <ul>
                <li class="selected"><a href="#">I want to create an empty table</a></li>
                <li>
                  <a href="#">I want to start with some imported data...</a>
                  <span class="file">
                    <div class="select_file">
                      <div id="uploader"></div>
                      <p>You can import .csv and .xls files</p>
                    </div>
                    <div class="progress">
                      <p>Uploading your file...</p>
                      <span class="progress"></span>
                    </div>
                  </span>
                  <span class="georeference">
                    <h4>Do you want to georeference your data now?</h4>
                    <ul>
                      <li class="selected">
                        <a href="#nope">No</a>
                        <p>I'll do it later</p>
                      </li>
                      <li>
                        <a href="#lets_geocode">Yes, I want to geocode it</a>
                        <p>I have a column that needs to be georeferenced</p>
                        <!-- <div class="select_box">
                          <h5>Option 1</h5>
                          <ul>
                            <li><a href="#">Option 1</a></li>
                            <li><a href="#">Option 2</a></li>
                            <li><a href="#">Option 3</a></li>
                            <li><a href="#">Option 4</a></li>
                          </ul>
                        </div> -->
                      </li>
                      <li>
                        <a href="#yes_lets_join">Yes, I want to join it with another dataset</a>
                        <p>I want to join it with a country data, region, etc...</p>
                      </li>
                    </ul>
                  </span>
                </li>
              </ul>
            </span>
            <span class="bottom">
              <a href="#" class="cancel">cancel</a>
              <input id="create_table" type="submit" name="submit" value="Create table"/>
            </span>
          </form>
        </div>
      </div>

      <div class="delete_window">
        <a href="#close_window" class="close_delete"></a>
        <div class="inner_">
          <span class="top">
            <h3>You are about to delete this table</h3>
            <p>You will not be able to recover this information. We really recommend to <a href="#">export the data</a> before deleting it.</p>
          </span>
          <span class="bottom">
            <a href="#close_window" class="cancel">cancel</a>
            <a href="#confirm_delete" class="confirm_delete">Delete this table</a>
          </span>
        </div>
      </div>
    </div>
  <% end %>