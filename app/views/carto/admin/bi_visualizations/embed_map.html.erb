<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>CartoDB</title>
    <meta name=viewport content="width=device-width initial-scale=1">
    <%= stylesheet_link_tag 'dashboard_embed.css', :media => 'all' %>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700' rel='stylesheet' type='text/css'>
    <style type="text/css">
      html, body {
        position:relative;
        height: 100%;
        padding: 0;
        margin: 0;
      }
    </style>
    <%= javascript_include_tag 'dashboard_embed.js' -%>
  </head>
  <body>
    <div class="Dashboard-canvas js-dashboard">
      <div class="Dashboard-mapWrapper Dashboard-mapWrapper--margin">
        <div class="Map-canvas">
          <div class="Map" id="map"></div>
        </div>
      </div>
    </div>
    <div class="Widget-canvas js-canvas"></div>

    <script>
      var viz = <%= @bi_visualization.viz_json %>;

      window.onload = function() {
        cartodb.createVis('map', viz, {
          no_cdn: false,
          layer_selector: false
        })
        .error(function(e) {
          console.log(e);
        });
      }
    </script>
  </body>
</html>
