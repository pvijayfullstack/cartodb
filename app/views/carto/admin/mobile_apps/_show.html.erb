<% @mobile_apps.each do |a| %>
  <div class="MobileAppsList-item">
    <div class="MobileAppsList-itemIcon UserAvatar">
      <img src="<%= a.icon_url %>" class="UserAvatar-img UserAvatar-img--medium-large MobileAppsList-userAvatar--img" />
    </div>
    <div class="MobileAppsList-itemInfo">
      <div class="MobileAppsList-itemInfoName">
        <h3 class="MobileAppsList-itemInfoTitle u-ellipsLongText"><%= link_to a.name, CartoDB.url(self, 'mobile_app', id: a.id) %></h3>
        <h4 class="MobileAppsList-itemInfoSubtitle u-ellipsLongText"><%= a.description rescue nil %></h4>
      </div>
      <div class="MobileAppsList-itemDetails">
        <p class="MobileAppsList-itemDetails--paragraph">
        <i class="CDB-IconFont CDB-IconFont-map MobileAppsList-itemDetails--paragraphIcon"></i> <%= a.app_type %>
        <i class="CDB-IconFont CDB-IconFont-map MobileAppsList-itemDetails--paragraphIcon"></i> <%= get_mobile_apps_platforms["#{a.platform}"][:text] %>
        </p>
        <p class="MobileAppsList-itemDetails--paragraph"><%= a.app_id %></p>
      </div>
    </div>
  </div>
<% end %>