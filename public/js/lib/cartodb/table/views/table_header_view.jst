<div>
  <label class="strong small">
    <% if (!editing_name) { %>
      <a class="coloptions" href="">
        <%= col_name %>
        <% if (col_type == 'geometry') { %>
          <span class="tiny geo">GEO</span>
        <% } %>
    <% } else { %>
      <input class="col_name_edit" type="text" value="<%= col_name %>"></input>
    <% } %>
    </a>
  </label>
  <p class="margin5 small">
    <% if (!changing_type) { %>
      <a href=""><%= col_type %></a>
    <% } else { %>
      <input class="col_change_type" type="text" value="<%= col_type %>"></input>
    <% } %>
  </p>
</div>